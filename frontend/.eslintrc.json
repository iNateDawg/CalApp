{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": ["plugin:react/recommended", "standard"],
	"settings": {
		"react": {
			"version": "detect"
		}
	},
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module"
	},
	"plugins": ["react"],
	"rules": {
		"allowIndentationTabs": 0,
		"no-tabs": 0,
		"indent": ["error", "tab"],
		"arrow-body-style": ["error", "always"],
		"no-unused-vars": "warn",
		"array-callback-return": 0
	}
}
